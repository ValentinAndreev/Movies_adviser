= render 'movies/movie', movie: @movie
- if @review.user == current_user
  strong My review
- else
  strong Review of #{@review.user.username}
= sanitize @review.text, tags: %w(strong em p br div ul ol li)
= link_to 'All reviews', reviews_path(movie_id: @movie.id)
- if @review.user == current_user
  =< link_to 'Edit review', edit_review_path(@review, movie_id: @movie.id)
  =< link_to 'Destroy', review_path(@review), method: :delete, data: { confirm: 'Are you sure?' }
hr/
= render @comments if @comments
#comments
= link_to 'New comment', new_review_comment_path(@review), remote: true, class: 'float-right'
br/
= link_to 'Close comment form', '#', id: 'comment-close', remote: true, class: 'float-right'
#form-comment